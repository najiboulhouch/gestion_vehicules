{% extends 'base.html.twig' %}

{% block title %}Modèles{% endblock %}

{% block body %}
    <h1>Liste des modèles enregistrés</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nom de modèle</th>
                <th>Marque </th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for modele in modeles %}
            <tr>
                <td>{{ modele.nomModele }}</td>
                <td>{{ modele.Marque.nomMarque }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('modele_show', {'id': modele.id}) }}">Afficher</a>
                    <a class="btn btn-info" href="{{ path('modele_edit', {'id': modele.id}) }}">Modifier</a>
                    {{ include('modele/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas de modèle enregistrés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('modele_new') }}">Ajouter un nouveau modèle</a>
{% endblock %}
