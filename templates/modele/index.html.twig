{% extends 'base.html.twig' %}

{% block title %}Modèles
{% endblock %}

{% block body %}
	{{ parent() }}
	<a class="btn btn-success" style="float:right;margin-bottom:17px;" href="{{ path('modele_new') }}">
		<i class="bi bi-plus-circle"></i>
		Ajouter un nouveau modèle</a>

	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>Nom de modèle</th>
				<th>Marque
				</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for modele in modeles %}
				<tr>
					<td>{{ modele.nomModele }}</td>
					<td>{{ modele.Marque.nomMarque }}</td>
					<td>
						<a class="btn btn-warning" href="{{ path('modele_show', {'id': modele.id}) }}">
							<i class="bi bi-book"></i>
						</a>
						<a class="btn btn-info" href="{{ path('modele_edit', {'id': modele.id}) }}">
							<i class="bi bi-pencil-square"></i>
						</a>
						{{ include('modele/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Pas de modèle enregistrés</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
