{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
{{ parent() }}
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nom du client</th>
                <th>Adresse</th>
                <th>Téléphone</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.nomClient }}</td>
                <td>{{ client.adresse }}</td>
                <td>{{ client.tel }}</td>
                <td>{{ client.email }}</td>
                <td>
                    <a class="btn btn-warning" 
                    href="{{ path('client_show', {'id': client.id}) }}"><i class="bi bi-book"></i></a>
                    <a class="btn btn-info" href="{{ path('client_edit', {'id': client.id}) }}">
                     <i class="bi bi-pencil-square"></i></a>
                    {{ include('client/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas de clients enregistrés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
