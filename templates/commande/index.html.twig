{% extends 'base.html.twig' %}

{% block title %}Commandes{% endblock %}

{% block body %}
    <h1>Listes des commandes enregistrées</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Date de rendez-vous</th>
                <th>Commentaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.dateRdv ? commande.dateRdv|date('Y-m-d') : '' }}</td>
                <td>{{ commande.commentaire }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('commande_show', {'id': commande.id}) }}">Afficher</a>
                    <a class="btn btn-info" href="{{ path('commande_edit', {'id': commande.id}) }}">Modifier</a>
                 {{ include('commande/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de commande enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
