{% extends 'base.html.twig' %}

{% block title %}{% trans %}Commandes{% endtrans %}{% endblock %}

{% block body %}
{{ parent() }}
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>{% trans %}Date de rendez-vous{% endtrans %}</th>
                <th>{% trans %}Commentaire{% endtrans %}</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.dateRdv ? commande.dateRdv|date('Y-m-d') : '' }}</td>
                <td>{{ commande.commentaire }}</td>
                <td>
                    <a class="btn btn-warning" 
                    href="{{ path('commande_show', {'id': commande.id}) }}">
                    <i class="bi bi-book"></i></a>
                    <a class="btn btn-info" 
                    href="{{ path('commande_edit', {'id': commande.id}) }}">
                    <i class="bi bi-pencil-square"></i></a>
                 {{ include('commande/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{% trans %}Pas de commandes enregistr√©es{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
