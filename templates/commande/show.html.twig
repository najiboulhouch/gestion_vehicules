{% extends 'base.html.twig' %}

{% block title %}Commandes{% endblock %}

{% block body %}
    <h1>Afficher commande</h1>

    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commande.id }}</td>
            </tr>
            <tr>
                <th>DateRdv</th>
                <td>{{ commande.dateRdv ? commande.dateRdv|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ commande.commentaire }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('commande_index') }}" class="btn btn-primary"> <i class="bi bi-skip-backward-fill"></i>  Retour</a>

    <a href="{{ path('commande_edit', {'id': commande.id}) }}" class="btn btn-primary"><i class="bi bi-pencil-square"></i> Modifier</a>

{% endblock %}
