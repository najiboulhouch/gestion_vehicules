{% extends 'base.html.twig' %}

{% block title %}{% trans %}Carburant{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Liste de type des carburants enregistrés{% endtrans %}</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>{% trans %}Type de carburant{% endtrans %}</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for carburant in carburants %}
            <tr>
                <td>{{ carburant.nomCarburant }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('carburant_show', {'id': carburant.id}) }}">{% trans %}Afficher{% endtrans %}</a>
                    <a class="btn btn-info" href="{{ path('carburant_edit', {'id': carburant.id}) }}">{% trans %}Modifier{% endtrans %}</a>
                    {{ include('carburant/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{% trans %}Pas de carburant enregistrés{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('carburant_new') }}">{% trans %}Ajouter un nouveau type de carburant{% endtrans %}</a>
{% endblock %}
