{% extends 'base.html.twig' %}

{% block title %}{% trans %}Carburant{% endtrans %}{% endblock %}

{% block body %}
{{ parent() }}
    <a class="btn btn-success" style="float:right;margin-bottom:17px;"  href="{{ path('carburant_new') }}">{% trans %}Ajouter un nouveau type de carburant{% endtrans %}</a>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>{% trans %}Type de carburant{% endtrans %}</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for carburant in carburants %}
            <tr>
                <td>{{ carburant.nomCarburant }}</td>
                <td>
                    <a class="btn btn-warning" 
                    href="{{ path('carburant_show', {'id': carburant.id}) }}">
                    {% trans %}<i class="bi bi-book"></i>{% endtrans %}</a>
                    <a class="btn btn-info" 
                    href="{{ path('carburant_edit', {'id': carburant.id}) }}">
                    <i class="bi bi-pencil-square"></i></a>
                    {{ include('carburant/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{% trans %}Pas de carburant enregistr√©s{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
