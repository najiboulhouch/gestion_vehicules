<form method="post" action="{{ path('carburant_delete', {'id': carburant.id}) }}" onsubmit="return confirm('Voulez-vous supprimer ce type de carburant?');" style="display:inline;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ carburant.id) }}">
    <button class="btn btn-danger">{% trans %}<i class="bi bi-trash"></i>{% endtrans %}</button>
</form>
