{% extends 'base.html.twig' %}

{% block title %}{% trans %}Carburant{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Carburant{% endtrans %}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ carburant.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Type de carburant{% endtrans %}</th>
                <td>{{ carburant.nomCarburant }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('carburant_index') }}"><i class="bi bi-skip-backward-fill"></i>  {% trans %}Retour{% endtrans %}</a>

    <a class="btn btn-primary" href="{{ path('carburant_edit', {'id': carburant.id}) }}">
    <i class="bi bi-pencil-square"></i>  {% trans %}Modifier{% endtrans %}</a>

{% endblock %}
